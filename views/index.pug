extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Thingz
      p.lead.text-light
        | The thingz I make and, that I work with other awesome humans to make using interwebz technologies!

  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-1.medium-up-2.large-up-2

      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/images/${project.image_urls[0]}`)
            h5=project.project_name 
      
